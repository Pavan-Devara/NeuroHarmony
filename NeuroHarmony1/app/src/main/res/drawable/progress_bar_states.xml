<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="1000dp"/>
            <gradient
                android:startColor="@color/shaded_background"
                android:centerColor="@color/shaded_background"
                android:centerY="0.75"
                android:endColor="@color/shaded_background"
                android:angle="270"
                />
        </shape>
    </item>

    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners android:radius="1000dp"/>
                <gradient
                    android:startColor="@color/golden_yellow"
                    android:centerColor="@color/golden_yellow"
                    android:centerY="0.75"
                    android:endColor="@color/golden_yellow"
                    android:angle="270"
                    />
            </shape>
        </clip>
    </item>

</layer-list>
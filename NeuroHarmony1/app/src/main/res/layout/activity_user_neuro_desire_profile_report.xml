<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:orientation="vertical"
android:background="@color/background"
tools:context=".ui.login.UserNeuroDesireProfileReport">

<TextView
    android:id="@+id/heading_user_neuroReport"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@color/background"
    android:fontFamily="@font/bold"
    android:text="Neuro Report"
    android:textColor="@color/white"
    android:layout_marginTop="10dp"
    android:textSize="30dp" />

<ScrollView
    android:id="@+id/scroll_user_neuroReport"
    android:layout_width="match_parent"
    android:layout_gravity="center"
    android:layout_weight="5"
    android:layout_marginTop="20dp"
    android:layout_height="match_parent">
    <WebView
        android:id="@+id/user_neuroReport"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:justificationMode="inter_word"
        android:text="text"
        android:textColor="@color/white"
        android:textSize="18dp"/>
</ScrollView>


<Button
    android:id="@+id/okay_user_neuro_desire_button"
    android:text="OK"
    android:textSize="18dp"
    android:fontFamily="@font/bold"
    android:layout_marginTop="15dp"
    android:layout_marginBottom="30dp"
    android:textColor="@color/background"
    android:background="@drawable/rounded_button"
    android:layout_gravity="center"
    android:layout_width="340dp"
    android:layout_height="55dp"/>



</LinearLayout>
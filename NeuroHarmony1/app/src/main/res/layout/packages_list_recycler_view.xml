<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/background"
    >



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/relative_package_selection"
        android:padding="15dp"
        android:clickable="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="25dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/rounded_white_option_button">

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_centerVertical="true"
            android:id="@+id/image_view_package"
            android:src="@drawable/sample"/>

        <TextView
            android:id="@+id/heading_package"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/price_text_view"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="0dp"
            android:justificationMode="inter_word"
            android:layout_marginEnd="7dp"
            android:layout_marginRight="7dp"
            android:layout_toStartOf="@+id/price_text_view"
            android:layout_toLeftOf="@+id/price_text_view"
            android:layout_toEndOf="@+id/image_view_package"
            android:layout_toRightOf="@+id/image_view_package"
            android:fontFamily="@font/regular"
            android:text="Basic"
            android:textColor="#000000"
            android:textSize="14dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:textSize="14dp"
            android:layout_toLeftOf="@+id/buy_button_"
            android:layout_marginRight="7dp"
            android:id="@+id/tokens_count"
            android:layout_marginTop="5dp"
            android:justificationMode="inter_word"
            android:fontFamily="@font/mont_semibold"
            android:layout_below="@id/heading_package"
            android:layout_alignStart="@+id/heading_package"
            android:layout_alignLeft="@+id/heading_package"
            android:text="Setup Package 100" />

        <TextView
            android:id="@+id/price_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="0dp"
            android:layout_marginRight="0dp"
            android:fontFamily="@font/mobile1"
            android:gravity="end"
            android:text="₹ 2000"
            android:textColor="#000000"
            android:textSize="18dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/price_text_view"
            android:layout_alignParentEnd="true"
            android:id="@+id/offer_price"
            android:layout_marginTop="5dp"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="0dp"
            android:layout_marginRight="0dp"
            android:text="₹ 2500"
            android:textColor="#6B6A6A" />

        <TextView
            android:id="@+id/description_package_buy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tokens_count"
            android:layout_alignStart="@+id/tokens_count"
            android:layout_alignLeft="@+id/tokens_count"
            android:layout_alignRight="@+id/buy_button_"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="5dp"
            android:layout_toStartOf="@+id/buy_button_"
            android:fontFamily="@font/mont_regular"
            android:text="Neuro Setup Package"
            android:textColor="#000000"
            android:textSize="14dp" />

        <Button
            android:id="@+id/buy_button_"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_below="@id/tokens_count"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="10dp"
            android:singleLine="true"
            android:textSize="14dp"
            android:background="@drawable/rounded_button"
            android:clickable="false"
            android:fontFamily="@font/bold"
            android:text="BUY NOW"
            android:textColor="@color/background" />





    </RelativeLayout>











</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/background"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.login.CompleteMatch.FinalizeMatchScreen">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="50dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:id="@+id/back_finalize_match_menu"
            android:layout_height="wrap_content"
            android:background="@drawable/back_arrow_24dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/medium"
            android:layout_marginTop="15dp"
            android:textSize="25dp"
            android:layout_centerHorizontal="true"
            android:text="Finalize Match"
            android:textColor="@android:color/white"/>
    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:layout_weight="1"
            android:id="@+id/finalize_my_match"
            android:background="@drawable/rounded_white_option_button">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="5dp"
                android:layout_marginLeft="5dp"
                android:layout_toEndOf="@+id/partner_add_image"
                android:layout_toRightOf="@+id/partner_add_image"
                android:fontFamily="@font/medium"
                android:paddingLeft="25dp"
                android:text="@string/finalize_match"
                android:textColor="#000000"
                android:textSize="22dp" />

            <ImageView
                android:layout_width="80dp"
                android:layout_height="90dp"
                android:id="@+id/partner_add_image"
                android:background="@mipmap/add_partner"
                android:layout_centerVertical="true"
                android:layout_marginLeft="25dp"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:layout_weight="1"
            android:layout_marginTop="25dp"
            android:id="@+id/finalize_match_requests"
            android:background="@drawable/rounded_white_option_button">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="5dp"
                android:layout_marginLeft="5dp"
                android:paddingLeft="25dp"
                android:layout_toEndOf="@+id/partner_list_image"
                android:layout_toRightOf="@+id/partner_list_image"
                android:fontFamily="@font/medium"
                android:text="@string/my_finalize"
                android:textColor="#000000"
                android:textSize="22dp" />

            <ImageView
                android:layout_width="80dp"
                android:id="@+id/partner_list_image"
                android:layout_height="90dp"
                android:background="@mipmap/partner_list"
                android:layout_centerVertical="true"
                android:layout_marginLeft="25dp"/>
        </RelativeLayout>


    </LinearLayout>


</LinearLayout>
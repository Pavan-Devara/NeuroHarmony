<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="20dp"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rounded_white_option_button">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="7dp"
        android:background="@drawable/rounded_white_option_button">


        <RelativeLayout
            android:id="@+id/relative_layout_notifications"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="100dp"
            android:padding="20dp"
            android:background="@drawable/rounded_white_option_button">

            <ImageView
                android:id="@+id/user_photo_notifications"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_centerVertical="true"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:src="@mipmap/profile_pic_placeholder" />
            

            <TextView
                android:id="@+id/notification_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/notification_name"
                android:layout_alignStart="@+id/notification_name"
                android:layout_alignLeft="@+id/notification_name"
                android:layout_marginTop="15dp"
                android:layout_weight="1"
                android:fontFamily="@font/medium"
                android:text="notification description"
                android:textColor="@color/shaded_background"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/notification_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginStart="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_toEndOf="@+id/user_photo_notifications"
                android:layout_toRightOf="@+id/user_photo_notifications"
                android:layout_weight="1"
                android:fontFamily="@font/semibold"
                android:text="Serin"
                android:textColor="@color/background"
                android:textSize="17dp" />
            
            
            

        </RelativeLayout>
    </androidx.cardview.widget.CardView>


</RelativeLayout>
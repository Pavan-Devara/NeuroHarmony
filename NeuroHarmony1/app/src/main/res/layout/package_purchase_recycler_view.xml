<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/relative_package_selection_transaction"
        android:padding="15dp"
        android:clickable="true"
        android:layout_marginTop="10dp"
        android:background="@drawable/rounded_white_option_button">

        <ImageView
            android:id="@+id/image_view_package_transaction"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_centerVertical="true"
            android:src="@drawable/sample"/>

        <TextView
            android:id="@+id/heading_package_transaction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="17.86dp"
            android:layout_marginLeft="17.86dp"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="2dp"
            android:layout_toEndOf="@+id/image_view_package_transaction"
            android:layout_toRightOf="@+id/image_view_package_transaction"
            android:fontFamily="@font/regular"
            android:text="Basic Neuro profile"
            android:textColor="#000000"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/success_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_alignTop="@+id/heading_package_transaction"
            android:layout_alignBottom="@+id/heading_package_transaction"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="10dp"

            android:layout_marginRight="10dp"
            android:layout_marginBottom="1dp"
            android:text=""
            android:textColor="#F2C013"
            android:textSize="13dp"
            android:visibility="visible" />


        <TextView
            android:id="@+id/tokens_count_transaction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:textSize="15dp"
            android:fontFamily="@font/mobile1"
            android:layout_below="@id/heading_package_transaction"
            android:layout_alignStart="@+id/heading_package_transaction"
            android:layout_alignLeft="@+id/heading_package_transaction"
            android:text="10 NEURO TOKENS" />

        <TextView
            android:id="@+id/price_text_view_transaction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/tokens_count_transaction"
            android:layout_marginRight="10dp"
            android:fontFamily="@font/mobile1"
            android:gravity="end"
            android:text="â‚¹ 2000"
            android:textColor="#000000"
            android:textSize="18dp" />



        <TextView
            android:id="@+id/created_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tokens_count_transaction"
            android:layout_alignEnd="@+id/tokens_count_transaction"
            android:layout_alignRight="@+id/tokens_count_transaction"
            android:layout_marginTop="10dp"
            android:textSize="14dp"
            android:padding="2dp"
            android:inputType="number"
            android:fontFamily="@font/medium"
            android:textColor="#000000"
            android:layout_alignStart="@+id/tokens_count_transaction"
            android:layout_alignLeft="@+id/tokens_count_transaction"
            android:text="20-04-2020" />

    </RelativeLayout>

</RelativeLayout>
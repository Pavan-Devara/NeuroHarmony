<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.login.AddDataToFirestore">

    <EditText
        android:id="@+id/text_message2"
        android:layout_width="387dp"
        android:layout_height="38dp"

        android:layout_marginTop="37dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text2_firestore" />

    <Button
        android:id="@+id/button_firestore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text1_firestore"
        android:layout_width="226dp"
        android:layout_height="137dp"
        android:gravity="center_horizontal"
        android:textColor="@color/background"
        android:text="Text1"
        android:textSize="18dp"
        app:layout_constraintBottom_toTopOf="@+id/button_firestore"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/text_message1"
        android:layout_width="387dp"
        android:layout_height="38dp"
        app:layout_constraintBottom_toTopOf="@+id/button_firestore"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text1_firestore" />

    <TextView
        android:id="@+id/text2_firestore"
        android:layout_width="226dp"
        android:layout_height="137dp"
        android:gravity="center_horizontal"
        android:text="Text2"
        android:textColor="@color/background"
        android:textSize="18dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_firestore" />

</androidx.constraintlayout.widget.ConstraintLayout>
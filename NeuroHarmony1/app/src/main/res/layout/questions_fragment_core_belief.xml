<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:id="@+id/Question_number_core_belief_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/Question_number_core_belief"
            android:justificationMode="inter_word"
            android:layout_marginEnd="75dp"
            android:layout_marginRight="75dp"
            android:padding ="18dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:background="@drawable/edge_rounded_button"
            android:fontFamily="@font/mobile1"
            android:gravity="center"
            android:text="Question 13 of 45"
            android:textColor="@android:color/white"
            android:textSize="16dp" />

        <ImageButton
            android:id="@+id/imageButton2"
            android:padding="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/Question_number_core_belief"
            android:layout_alignEnd="@+id/Question_number_core_belief"
            android:layout_alignRight="@+id/Question_number_core_belief"
            android:background="@drawable/edge_rounded_button"
            android:visibility="visible"
            app:srcCompat="@drawable/pause_questions_fragment" />

        <ImageButton
            android:id="@+id/imageButton3_coreBelief"
            android:padding="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/Question_number_core_belief"
            android:layout_alignEnd="@+id/Question_number_core_belief"
            android:layout_alignRight="@+id/Question_number_core_belief"
            android:background="@drawable/edge_rounded_button"
            android:visibility="invisible"
            app:srcCompat="@drawable/resume_questions_fragment" />
    </RelativeLayout>

    <TextView
        android:id="@+id/core_belief_question"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_below="@+id/Question_number_core_belief_layout"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_gravity="left"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="43dp"
        android:background="@drawable/circle"
        android:fontFamily="@font/bold"
        android:gravity="center"
        android:shadowColor="@android:color/white"
        android:shadowRadius="10.0"
        android:text="Q"
        android:textColor="@color/background"
        android:textSize="25dp" />

    <TextView
        android:id="@+id/question_1_core_belief_test"
        android:layout_marginRight="20dp"
        android:layout_marginEnd="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Question_number_core_belief_layout"
        android:layout_marginStart="12dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="43dp"
        android:layout_toEndOf="@+id/core_belief_question"
        android:layout_toRightOf="@+id/core_belief_question"
        android:fontFamily="@font/medium"
        android:text="questions"
        android:textColor="@android:color/white"
        android:textSize="17dp" />

    <ProgressBar
        android:id="@+id/progressBar_corebelief"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="236dp"
        android:layout_height="12dp"
        android:layout_centerHorizontal="true"
        android:progressDrawable="@drawable/progress_bar_states"
        android:layout_below="@+id/Question_number_core_belief_layout"
        android:layout_marginTop="10dp" />



</RelativeLayout>
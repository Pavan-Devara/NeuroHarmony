<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">



    <LinearLayout
        android:layout_width="match_parent"
        android:background="@color/white"
        android:padding="3dp"
        android:weightSum="10"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="0dp"
            android:text=""
            android:layout_weight="2"
            android:id="@+id/referar_name"
            android:textColor="#000000"
            android:gravity="left"
            android:maxLines="2"
            android:fontFamily="@font/regular"
            android:layout_height="wrap_content"
            />
        <TextView
            android:layout_width="0dp"
            android:text=""
            android:layout_weight="2"
            android:id="@+id/created_date_referer"
            android:gravity="left"
            android:visibility="visible"
            android:textSize="12dp"
            android:textColor="#000000"
            android:fontFamily="@font/semibold"
            android:layout_height="wrap_content"
            />
        <TextView
            android:layout_width="0dp"
            android:text=""
            android:layout_weight="2"
            android:id="@+id/credited_date_referer"
            android:gravity="left"
            android:textSize="12dp"
            android:visibility="visible"
            android:textColor="#000000"
            android:fontFamily="@font/semibold"
            android:layout_height="wrap_content"
            />
        <TextView
            android:layout_width="0dp"
            android:text=""
            android:id="@+id/ammount_credited_affiliate"
            android:textColor="#000000"
            android:layout_weight="2"
            android:gravity="left"
            android:fontFamily="@font/mont_semibold"
            android:layout_height="wrap_content"
            />


        <TextView
            android:layout_width="0dp"
            android:text=""
            android:textColor="@color/background"
            android:gravity="center"
            android:layout_weight="2"
            android:id="@+id/pending_ammount"
            android:layout_marginRight="5dp"
            android:background="@drawable/light_purple"
            android:textAllCaps="true"
            android:padding="5dp"
            android:textSize="12dp"
            android:visibility="visible"
            android:fontFamily="@font/semibold"
            android:layout_height="wrap_content"
            />


    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.2dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="#7E7E7E"/>

</LinearLayout>
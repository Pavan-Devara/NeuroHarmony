<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".ui.login.ReligiousInfo">

    <TextView
        android:id="@+id/heading_religioud_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/background"
        android:fontFamily="@font/mobile1"
        android:text="Religious Info"
        android:layout_marginTop="20dp"
        android:textColor="@color/white"
        android:textSize="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Spinner
        android:id="@+id/religionSpinner"
        style="@android:style/Widget.Material.Light.Spinner.Underlined"
        android:layout_width="349dp"
        android:layout_height="31dp"
        android:layout_marginTop="24dp"
        android:backgroundTint="@color/white"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.506"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/religion_subheading"
        />

    <TextView
        android:id="@+id/religion_subheading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:fontFamily="@font/mobile1"
        android:text="Religion"
        android:textColor="@color/white"
        android:textSize="15dp"
        android:textAllCaps="true"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.120"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/heading_religioud_info" />

    <Spinner
        android:id="@+id/casteSpinner"
        style="@android:style/Widget.Material.Light.Spinner.Underlined"
        android:layout_width="349dp"
        android:layout_height="31dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/white"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.506"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/caste_subheading"
        tools:targetApi="lollipop" />

    <TextView
        android:id="@+id/caste_subheading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:fontFamily="@font/mobile1"
        android:text="Caste"
        android:textAllCaps="true"
        android:textColor="@color/white"
        android:textSize="15dp"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.120"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/religionSpinner" />

    <Spinner
        android:id="@+id/subCasteSpinner1"
        style="@android:style/Widget.Material.Light.Spinner.Underlined"
        android:layout_width="349dp"
        android:layout_height="31dp"
        android:layout_marginTop="24dp"
        android:backgroundTint="@color/white"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.506"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/subcaste_subheading"
        tools:targetApi="lollipop" />

    <TextView
        android:id="@+id/subcaste_subheading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:fontFamily="@font/mobile1"
        android:text="Sub-Caste"
        android:textAllCaps="true"
        android:textColor="@color/white"
        android:textSize="15dp"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.120"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/casteSpinner" />
</androidx.constraintlayout.widget.ConstraintLayout>

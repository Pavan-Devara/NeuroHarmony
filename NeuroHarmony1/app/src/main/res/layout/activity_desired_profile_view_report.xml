<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background"
    tools:context=".ui.login.DesiredProfileViewReport">

    <TextView
        android:id="@+id/heading_desireBeliefReport"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@color/background"
        android:fontFamily="@font/bold"
        android:text="Desire Profile Report"
        android:textColor="@color/white"
        android:layout_marginTop="10dp"
        android:textSize="30dp" />


    <ScrollView
        android:id="@+id/scroll_desireBeliefReport"
        android:layout_width="match_parent"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:layout_height="match_parent"
        android:layout_weight="4">
        <WebView
            android:id="@+id/desireBeliefReport"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:justificationMode="inter_word"
            android:text="text"
            android:textColor="@color/white"
            android:textSize="18dp"/>
    </ScrollView>



    <Button
        android:id="@+id/okay_desireneuroReport"
        android:text="VIEW NEURO REPORT"
        android:textSize="18dp"
        android:fontFamily="@font/bold"
        android:layout_marginTop="15dp"
        android:textColor="@color/background"
        android:background="@drawable/rounded_button"
        android:layout_gravity="center"
        android:layout_marginRight="25dp"
        android:layout_marginLeft="25dp"
        android:layout_width="match_parent"
        android:layout_height="55dp"/>

    <Button
        android:id="@+id/okay_desireBeliefReport"
        android:text="VIEW DISTANCE REPORT"
        android:textSize="18dp"
        android:fontFamily="@font/bold"
        android:layout_marginTop="15dp"
        android:textColor="@color/background"
        android:background="@drawable/rounded_button"
        android:layout_gravity="center"
        android:layout_marginBottom="20dp"
        android:layout_width="match_parent"
        android:layout_marginRight="25dp"
        android:layout_marginLeft="25dp"
        android:layout_height="55dp"/>

</LinearLayout>
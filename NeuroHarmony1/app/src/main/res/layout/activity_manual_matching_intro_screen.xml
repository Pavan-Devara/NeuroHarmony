<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.login.manualMatching.ManualMatchingIntroScreen"
    android:background="@color/background"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="50dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:id="@+id/back_manual_match_menu"
            android:layout_height="wrap_content"
            android:background="@drawable/back_arrow_24dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/medium"
            android:layout_marginTop="15dp"
            android:textSize="25dp"
            android:layout_centerHorizontal="true"
            android:text="Partner Match"
            android:textColor="@android:color/white"/>
    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:layout_weight="1"
            android:id="@+id/add_partner_view"
            android:background="@drawable/rounded_white_option_button">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="25dp"
                android:layout_marginLeft="25dp"
                android:layout_toEndOf="@+id/partner_add_image"
                android:layout_toRightOf="@+id/partner_add_image"
                android:fontFamily="@font/medium"
                android:paddingLeft="25dp"
                android:text="@string/add_partner"
                android:textColor="#000000"
                android:textSize="25dp" />

            <ImageView
                android:layout_width="80dp"
                android:layout_height="90dp"
                android:id="@+id/partner_add_image"
                android:background="@mipmap/add_partner"
                android:layout_centerVertical="true"
                android:layout_marginLeft="25dp"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:layout_weight="1"
            android:layout_marginTop="25dp"
            android:id="@+id/partner_list_view"
            android:background="@drawable/rounded_white_option_button">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="25dp"
                android:layout_marginLeft="25dp"
                android:paddingLeft="25dp"
                android:layout_toEndOf="@+id/partner_list_image"
                android:layout_toRightOf="@+id/partner_list_image"
                android:fontFamily="@font/medium"
                android:text="@string/partner_list"
                android:textColor="#000000"
                android:textSize="25dp" />

            <ImageView
                android:layout_width="80dp"
                android:id="@+id/partner_list_image"
                android:layout_height="90dp"
                android:background="@mipmap/partner_list"
                android:layout_centerVertical="true"
                android:layout_marginLeft="25dp"/>
        </RelativeLayout>


    </LinearLayout>

</LinearLayout>
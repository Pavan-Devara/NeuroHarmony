<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:orientation="vertical" android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/test_name_background"

        android:orientation="vertical">
    <TextView
        android:layout_width="wrap_content"
        android:fontFamily="@font/bold"
        android:layout_gravity="center"
        android:textSize="20dp"
        android:textColor="#000000"
        android:layout_marginTop="10dp"
        android:id="@+id/alret_1"
        android:layout_height="wrap_content"
        android:text="Alert"/>

        <TextView
            android:id="@+id/alert_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/medium"
            android:paddingLeft="15dp"

            android:paddingRight="15dp"
            android:text="Please name the test to continue"
            android:textColor="#000000"
            android:textSize="17dp" />
    <EditText
        android:layout_width="match_parent"
        android:background="@drawable/background_edittext_of_textname"
        android:hint="Name"
        android:textSize="15dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:textColor="#000000"
        android:padding="5dp"
        android:id="@+id/name_editext_testname"
        android:fontFamily="@font/regular"
        android:layout_marginTop="20dp"
        android:layout_height="wrap_content"/>

        <View
            android:layout_width="match_parent"
            android:background="@color/background"
            android:layout_marginTop="10dp"
            android:layout_height="0.5dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:text="Cancel"
                android:id="@+id/no_cancel"
                android:textAllCaps="false"
                android:textColor="#FF69B4"
                android:fontFamily="@font/medium"
                android:background="#00000000"
                android:layout_height="wrap_content"/>
            <View
                android:layout_width="0.5dp"
                android:background="@color/background"
                android:layout_height="match_parent"/>
            <Button
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:text="Proceed"
                android:id="@+id/yes_proceed"
                android:textColor="	#FF69B4"
                android:textAllCaps="false"
                android:fontFamily="@font/medium"
                android:background="#00000000"
                android:layout_height="wrap_content"/>

        </LinearLayout>
    </LinearLayout>


</FrameLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/linear_layout_transactions_recycler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1"
        android:padding="5dp"
        android:orientation="horizontal"
        android:background="@color/background">
        <TextView
            android:id="@+id/created_date_package_transaction"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.2"
            android:gravity="left"
            android:text="Date"
            android:textSize="13dp"
            android:fontFamily="@font/medium"
            android:textColor="@color/white"/>

        <TextView
            android:id="@+id/package_transaction_remarks"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:gravity="left"
            android:text="Remarks"
            android:textSize="15dp"
            android:fontFamily="@font/medium"
            android:textColor="@color/white"/>

        <TextView
            android:id="@+id/pacakage_token_credits"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.15"
            android:gravity="center"
            android:text=""
            android:textSize="15dp"
            android:fontFamily="@font/medium"
            android:textColor="@color/white"/>

        <TextView
            android:id="@+id/pacakage_token_debits"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.15"
            android:gravity="end"
            android:text=""
            android:textSize="15dp"
            android:fontFamily="@font/medium"
            android:textColor="@color/white"/>

    </LinearLayout>
</RelativeLayout>
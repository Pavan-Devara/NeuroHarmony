<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerHorizontal="true"
    android:background="@color/background"
    tools:context=".ui.login.NeuroTestIntroScreen">


    <TextView
        android:id="@+id/Neuro_harmony_test"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:text="@string/neuro_test"
        android:textColor="@android:color/white"
        android:textSize="32sp"
        android:fontFamily="@font/medium" />

    <TextView
        android:id="@+id/Instructions"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:textSize="20dp"
        android:layout_below="@+id/Neuro_harmony_test"
        android:layout_marginTop="40dp"
        android:fontFamily="@font/light"
        android:gravity="center"
        android:background="@drawable/edge_rounded_button"
        android:text="@string/Instructions"
        android:textColor="@android:color/white" />


    <Button
        android:id="@+id/Neuro_instructions_continue"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="25dp"
        android:layout_marginBottom="30dp"
        android:layout_marginRight="25dp"
        android:background="@drawable/rounded_button"
        android:fontFamily="@font/bold"
        android:text="CONTINUE"
        android:textColor="@color/background"
        android:textSize="16dp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="330dp"
        android:layout_above="@+id/Neuro_instructions_continue"
        android:layout_below="@+id/Instructions"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="20dp"
        android:background="@color/background"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:textColor="@android:color/white"
        android:textSize="20dp" />

</RelativeLayout>
